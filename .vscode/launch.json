
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Debug MCP server (server.py)",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/contained-capi-mcp/capi-mcp-server/server.py",
			"cwd": "${workspaceFolder}/contained-capi-mcp/capi-mcp-server",
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch debug_target.js",
			"program": "${workspaceFolder}/scripts/debug_target.js",
			"cwd": "${workspaceFolder}",
			"env": { "DEBUG_TARGET_N": "30" },
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"],
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to debug_target (inspect)",
			"port": 9229,
			"restart": false,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch complex_debug_me.js",
			"program": "${workspaceFolder}/scripts/complex_debug_me.js",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "/opt/homebrew/bin/node",
			"runtimeArgs": ["--inspect-brk=9229"],
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"],
			"internalConsoleOptions": "neverOpen"
		}
	]
}

{
	"configurations": [

	]
}